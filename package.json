{
  "name": "ceres-backend",
  "version": "0.1.0",
  "description": "API for Ceres project",
  "main": "src/server.js",
  "scripts": {
    "start": "cross-env NODE-ENV=production node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ucorp/ceres-backend.git"
  },
  "keywords": [
    "express",
    "api"
  ],
  "author": "ucorp <contact@ucorp.xyz>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Ucorp/ceres-backend/issues"
  },
  "homepage": "https://github.com/Ucorp/ceres-backend#readme",
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".config/git/commitizen.js"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS -g .config/git/commitlint.js"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "cross-env": "^5.2.0",
    "cz-customizable": "^6.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.2",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "helmet": "^3.20.0",
    "winston": "^3.2.1"
  }
}
